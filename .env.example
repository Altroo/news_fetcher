# News API settings
NEWS_API_KEY=your_news_api_key_here
NEWS_API_URL=https://newsapi.org/v2/top-headlines?country=us&apiKey=${NEWS_API_KEY}

# OpenRouter API settings
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_ENGINE_ID=your_engine_id_here
OPENROUTER_URL=https://api.openrouter.ai/v1/engines/${OPENROUTER_ENGINE_ID}/completions

# Content filtering settings
THEMES=technology,health,finance

# Output settings
OUTPUT_FILE=news_summaries.txt

# Database settings
DATABASE_URL=sqlite:///news_fetcher.db

# API request settings
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1

# Summarization settings
MAX_TOKENS=150
TEMPERATURE=0.5